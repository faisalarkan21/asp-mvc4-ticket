

@Html.Partial("_HeaderAdmin")
@model tiket_airlines.Models.GabunganSemuaPembeli


<div class="table-users col-md-10 col-md-offset-2 container">
    <div style="margin-top: 70px;" class="page-header text-center well">
        <div class="col-md-12 ">
            <div class="col-md-13">
                <h1 class="judul">List Semua Pembeli</h1>

                <hr class="Garistema">

            </div>





        </div>
        @{
            int i = 1;


        }

        <div style="font-size: 3px;" class="bs-component">
            <table class="table table-hover jadi-vertical">
                <thead>
                    <tr class="headerTengah" id="warnaTr">
                        <th>No</th>
                        <th>Nama</th>
                        <th>Email Utama</th>
                        <th>No Handphone</th>
                        <th>Kotak Validasi Tiket</th>
                        <th>Status</th>
                        <th colspan="3">Tindakan</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int a = 0; a < Model.tblPembeli.Count; a++)
                    {
                        <tr class="">
                            <td class="text-center tengah pagination-centered">@i</td>
                            <td class="text-center pagination-centered">
                                @Model.tblPembeli[a].nm_pembeli

                            </td>
                            <td class="text-center pagination-centered">
                                @Model.tblPembeli[a].email_pembeli
                            </td>
                            <td class="text-center pagination-centered">
                                @Model.tblPembeli[a].hp_pembeli
                            </td>


                            <td class="text-center tengah-table pagination-centered">

                                @if (@Model.tblValidasi[a].pilihan_bank == null)
                                {
                                    @Html.Raw("Belum Validasi Tiket")
                                }
                                else
                                {
                                    @Model.tblValidasi[a].pilihan_bank
                                }


                            <td class="text-center tengah-table pagination-centered">
                                @(Model.tblDetailTiket[a].total_transfer != 0 ? "Lunas" : "Belum Lunas")
                            </td>
                            <td id="btn-edit" class="tengah text-center">
                                <a class="btn btn-raised btn-info"
                                   href="<%=request.getContextPath()%>/AdminController?action=userDetail&userId=${pembeli.idUser}">
                                    Detail
                                </a>
                            </td>

                        </tr>


                        i++;



                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>

</body>
@Html.Partial("_Footer")
